{
  "id": "firebase-api-tests-env",
  "name": "Firebase API Tests Environment",
  "values": [
    {
      "key": "firebase_api_key",
      "value": "YOUR_FIREBASE_API_KEY",
      "description": "Firebase API Key from Project Settings",
      "enabled": true
    },
    {
      "key": "firebase_project_id",
      "value": "YOUR_PROJECT_ID",
      "description": "Firebase Project ID",
      "enabled": true
    },
    {
      "key": "base_url",
      "value": "https://identitytoolkit.googleapis.com/v1/accounts",
      "description": "Firebase Authentication API base URL",
      "enabled": true
    },
    {
      "key": "firestore_url",
      "value": "https://firestore.googleapis.com/v1/projects/{{firebase_project_id}}/databases/(default)/documents",
      "description": "Firestore REST API base URL",
      "enabled": true
    },
    {
      "key": "id_token",
      "value": "",
      "description": "Firebase ID Token (set automatically after sign in)",
      "enabled": true
    },
    {
      "key": "refresh_token",
      "value": "",
      "description": "Firebase Refresh Token (set automatically after sign in)",
      "enabled": true
    },
    {
      "key": "user_uid",
      "value": "",
      "description": "User UID (set automatically after sign in)",
      "enabled": true
    },
    {
      "key": "user_email",
      "value": "",
      "description": "User Email (set automatically after sign in)",
      "enabled": true
    }
  ],
  "_postman_variable_scope": "environment"
}
